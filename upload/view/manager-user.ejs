            <div class="container">
                <h1>Đây là quản lý user</h1>
                <div class="table-dht">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">
                                    <h3>STT</h3>
                                </th>
                                <th scope="col">
                                    <h3>Usename</h3>
                                </th>
                                <th scope="col">
                                    <h3>Quyền</h3>
                                </th>
                                <th scope="col">
                                    <h3>Chỉnh sửa</h3>
                                </th>
                            </tr>
                        </thead>



                        <tbody>
                            <!--EJS-->
                            <tr>
                                <% for(var i=0;i < users.length; i++) { %>
                                    <th scope="row">
                                        <h5>
                                            <%= i+1 %>
                                        </h5>
                                    </th>
                                    <td>
                                        <%= users[i].usename %>
                                    </td>
                                    <td>
                                        <select class="form-select" aria-label="Default select example">

                                            <% for(var j=0;j < roles.length; j++) { %>
                                                <% if(roles[j].role==users[i].role) { %>
                                                    <option selected>
                                                        <%= users[i].role %>
                                                    </option>
                                                    <% continue %>
                                                        <%}%>
                                                            <option>
                                                                <%= roles[j].role %>
                                                            </option>
                                                            <%}%>
                                        </select>
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-primary">
                                            <p class="btn-delete-label">Lưu</p>
                                        </button>
                                        <a href="/user/api/delete?id=<%= users[i].id%>">
                                            <button type="button" class="btn btn-danger">
                                                <p class="btn-delete-label">Delete</p>
                                            </button>
                                        </a>
                                    </td>
                            </tr>
                            <%}%>

                                <!--END-->

                        </tbody>
                    </table>
                </div>
                <!--Add User-->
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                    Thêm user
                </button>
            </div>
        </div>

    </div>

    <!-- Button trigger modal -->


    <!-- Modal add user -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" id="exampleModalLabel">Thêm user</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="/user/create" , method="POST">
                        <div class="form-group">
                            <label for="Usename">Usename</label>
                            <input type="usename" class="form-control" id="usename" name="usename">
                        </div>
                        <div class="form-group">
                            <label for="pwd">Password:</label>
                            <input type="password" class="form-control" id="pwd" name="password">
                        </div>
                        <div class="form-group">
                            <label for="pwd">Quyền:</label>
                            <select class="form-select" aria-label="Default select example" id="role" name="role">
                                <% for(var j=0;j < roles.length; j++) { %>
                                    <option value="<%= roles[j].role %>">
                                        <%= roles[j].role %>
                                    </option>
                                    <%}%>
                            </select>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                            <button type="submit" class="btn btn-primary">Thêm</button>
                        </div>
                    </form>

                </div>

            </div>

        </div>
    </div>
    </div>
    <!--End Modal add user-->

